// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String?  // Contraseña encriptada
  name              String?
  phone             String?  // Número de teléfono
  role              String   @default("user") // "user" | "admin"
  monthlyLimit      Int      @default(10) // Límite mensual de consultas por usuario
  
  // Verificación de email
  isVerified        Boolean  @default(false)
  verificationCode  String?
  verificationExpires DateTime?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relaciones
  apiKeys      ApiKey[]
  usage        Usage[]
  logs         RequestLog[]
  
  @@map("users")
}

model ApiKey {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String   // Nombre descriptivo de la API key
  userId      String
  isActive    Boolean  @default(true)
  monthlyLimit Int     @default(1000) // Límite mensual de consultas
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relaciones
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  usage       Usage[]
  logs        RequestLog[]
  
  @@map("api_keys")
}

model Usage {
  id        String   @id @default(cuid())
  userId    String
  apiKeyId  String
  endpoint  String   // Endpoint utilizado (/api/image, /api/front, etc.)
  month     Int      // Mes (1-12)
  year      Int      // Año
  count     Int      @default(0) // Número de consultas en ese mes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey    ApiKey   @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  
  // Índice único para evitar duplicados por usuario/apikey/endpoint/mes/año
  @@unique([userId, apiKeyId, endpoint, month, year])
  @@map("usage")
}

model RequestLog {
  id        String   @id @default(cuid())
  userId    String
  apiKeyId  String
  endpoint  String
  method    String
  status    Int
  ip        String?
  userAgent String?
  duration  Int?     // Duración en ms
  createdAt DateTime @default(now())

  // Relaciones
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey    ApiKey   @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("request_logs")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
  @@map("password_reset_tokens")
}
